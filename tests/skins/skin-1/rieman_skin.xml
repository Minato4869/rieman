<rieman-skin name="skin-1" version="1.0">

    <colors>
        <colordef name="black" hex="#0"/>
    </colors>

    <fonts>
        <desktop-name   face="Times" size="10" color="black"/>
        <window-name    face="Times" size="10" color="black"/>
        <desktop-number face="Times" size="10" color="black"/>
    </fonts>

    <backgrounds>
        <pager          type="image" src="img.png"/>
        <desktop        type="image" src="img.png"/>
        <desktop-active type="image" src="img.png"/>
        <desktop-pad    type="image" src="img.png"/>
        <window         type="image" src="img.png"/>
        <window-active  type="image" src="img.png"/>
    </backgrounds>

    <borders>
        <viewport width="1" type="color" color="black"/>
    </borders>

</rieman-skin>
