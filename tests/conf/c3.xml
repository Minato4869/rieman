<?xml version="1.0" encoding="UTF-8"?>
<rieman-conf version="1.0">
    <geometry width="50" height="35"/>
    <layout wrap="3" corner="bottomright" orientation="horizontal"/>
    <appearance>
        <skin name="default"/>
        <desktop_text enable="true" content="number"/>
        <desktop_pad enable="true" position="above"/>
        <window_icon enable="false"/>
        <viewports enable="false"/>
        <minitray enable="false"/>
    </appearance>
    <window>
        <withdrawn enable="false"/>
        <skip_taskbar enable="false"/>
        <skip_pager enable="false"/>
        <sticky enable="false"/>
        <position value="topleft"/>
        <layer value="normal"/>
    </window>
    <actions>
        <change_desktop enable="true" mouse_button="right"/>
    </actions>
</rieman-conf>
