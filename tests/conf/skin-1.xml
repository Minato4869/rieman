<?xml version="1.0" encoding="UTF-8"?>
<rieman-conf version="1.0">
    <geometry width="50" height="35"/>
    <layout wrap="0" corner="topright" orientation="vertical"/>
    <appearance>
        <skin name="../tests/skins/skin-1"/>
        <desktop_text enable="true" content="number"/>
        <desktop_pad enable="true" position="above"/>
        <window_icon enable="true"/>
        <viewports enable="true"/>
        <minitray enable="true"/>
    </appearance>
    <window>
        <withdrawn enable="false"/>
        <skip_taskbar enable="true"/>
        <skip_pager enable="true"/>
        <sticky enable="true"/>
        <position value="topleft"/>
        <layer value="normal"/>
    </window>
    <actions>
        <change_desktop enable="true" mouse_button="left"/>
    </actions>
</rieman-conf>
