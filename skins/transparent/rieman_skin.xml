<?xml version="1.0" encoding="UTF-8"?>

<rieman-skin name="transparent" version="1.0">

    <colors>
        <colordef name="black"  hex="#0"/>
        <colordef name="white"  hex="#ffffff"/>
        <colordef name="blue"   hex="#0000ff"/>
        <colordef name="yellow" hex="#ffff00"/>
        <colordef name="gray"   hex="#666666"/>
    </colors>

    <fonts>
        <desktop-name   face="Droid Sans:10" size="10" color="white"/>
        <window-name    face="Droid Sans:10" size="10" color="white"/>
        <desktop-number face="Clockopia"     size="20" color="black"/>
    </fonts>

    <backgrounds>
        <pager            type="image" src=":root:"/>
        <desktop          type="color" color="black"  alpha="0.08"/>
        <desktop-pad      type="color" color="black"  alpha="0.4"/>
        <desktop-active   type="color" color="black"  alpha="0.3"/>

        <viewport         type="color" color="blue"   alpha="0.1"/>
        <viewport-active  type="color" color="gray"   alpha="0.5"/>

        <window           type="color" color="black"  alpha="0.4"/>
        <window-active    type="color" color="blue"   alpha="0.12"/>
        <window-attention type="color" color="blue"   alpha="0.3"/>
    </backgrounds>

    <borders>
        <pager            width="1" type="color" color="white" alpha="0.2"/>
        <desktop-active   width="1" type="color" color="black"/>

        <viewport         width="5" type="image" src="viewport-border.png"/>
        <viewport-active  width="5" type="image" src="viewport-active-border.png" alpha="0.8"/>

        <window           width="1" type="color" color="gray" alpha="0.4"/>
        <window-active    width="1" type="color" color="black"/>
        <window-attention width="1" type="color" color="white"/>
    </borders>

    <icons>
        <window alpha="1.0" fallback="missing_icon.png"/>
    </icons>

</rieman-skin>
